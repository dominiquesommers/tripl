{
  "name": "tripl",
  "homepage": "https://dominiquesommers.github.io/tripl/",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "concurrently \"npm run mock-api\" \"ng serve\"",
    "build": "ng build",
    "deploy": "ng build --configuration production --base-href /tripl/ --deploy-url /tripl/ && npx angular-cli-ghpages --dir dist/tripl/browser --repo https://github.com/dominiquesommers/tripl",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "mock-api": "npx json-server@0.17.4 --watch db.json --port 3000",
    "serve:ssr:tripl": "node dist/tripl/server/server.mjs"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.5.1",
  "dependencies": {
    "@angular/cdk": "^21.1.0",
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/fire": "^20.0.1",
    "@angular/forms": "^21.0.0",
    "@angular/material": "^21.1.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/platform-server": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@angular/ssr": "^21.0.4",
    "@mapbox/search-js-web": "^1.0.0-beta.18",
    "chart.js": "^4.5.1",
    "chartjs-adapter-date-fns": "^3.0.0",
    "concurrently": "^9.2.1",
    "date-fns": "^4.1.0",
    "express": "^5.1.0",
    "firebase": "^12.7.0",
    "lucide-angular": "^0.562.0",
    "mapbox-gl": "^3.17.0",
    "ng2-charts": "^8.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.4",
    "@angular/cli": "^21.0.4",
    "@angular/compiler-cli": "^21.0.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/express": "^5.0.1",
    "@types/node": "^20.17.19",
    "angular-cli-ghpages": "^2.0.3",
    "jsdom": "^27.1.0",
    "json-server": "^0.17.4",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.12",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}
